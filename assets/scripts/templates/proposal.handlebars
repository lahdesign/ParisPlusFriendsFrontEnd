{{#each proposals as |proposal|}}
  {{log proposal}}
  {{> partial}}

 <!-- Developers, why are we using data-id and not just id? -->
  <h1 data-id="{{proposal.id}}"> <small>Title: {{proposal.title}}</small></h1>

  <ul data-id="{{proposal.id}}">
    <li>{{#if proposal.author}}
      {{proposal.question_1}}
      {{proposal.question_2}}
      {{proposal.question_3}}
    {{else}}
    {{/if}}</li>
    <li><button type="submit">Remove</button></li>
  </ul>


